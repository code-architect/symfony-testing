{% extends 'base.html.twig' %}
{% block title %}Genus List{% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># Species Count</th>
            <th># of species</th>
            <th>Last Updated at</th>
        </tr>
        </thead>
        <tbody>
        {% for genus in genuses %}
            <tr>
                <td>{{ genus.name }}</td>
                <td>{{ genus.speciesCount }}</td>
                <td>{{ genus.subFamily }}</td>
                <td>{{ genus.funFact }}</td>
                <td>{{ genus.updatedAt|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}